# /opt/credits-ledger/.env

# Environment
NODE_ENV=production
PORT=4000

# Security (Must be changed in production)
# Generate with: openssl rand -hex 32
JWT_SECRET=
# Generate with: openssl rand -hex 16
ADMIN_TOKEN=
# Allowed origins (e.g. https://api.example.com)
CORS_ORIGIN=

# Pilot Access Control (Optional)
# Whitelist specific users for write access (POST /credits/events).
# Leave empty to allow ALL users (default).
# WRITE_ENABLED_USERS=user_123,user_456

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=credits
# DATABASE_URL is constructed automatically in docker-compose from above vars, 
# but if you run scripts manually, set it here too:
# DATABASE_URL=postgresql://postgres:PASSWORD@localhost:5432/credits?schema=public
